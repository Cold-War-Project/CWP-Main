template highlighted_square_selection
{
	spriteType = Corneredtiled
	spriteborder = { 22 22 }
	texture = "gfx/interface/selections/highlighted_square_selection.dds"
	size = { 100% 100% }
	parentanchor = center
	shaderfile = "gfx/FX/pdxgui_default.shader"
	texture_density = 2
	alpha = 0.8

	modify_texture = {
		texture = "gfx/interface/backgrounds/gradient_overlay.dds"
		spriteType = Corneredstretched
		spriteborder = { 0 0 }
		blend_mode = overlay
		alpha = 0.5
	}
	
	modify_texture = {
		name = overlay_left
		texture = "gfx/interface/selections/highlighted_square_selection_anim.dds"
		blend_mode = overlay
		alpha = 0.5
	}
	
	### overlay rotating left
	state = {
		trigger_on_create = yes
		name = left
		next = left2
		modify_texture = {
			name = overlay_left
			rotate_uv = 0
		}
	}
	state = {
		name = left2
		next = left
		duration = 15.0
		modify_texture = {
			name = overlay_left
			rotate_uv = 360
		}
	}
}

