			### DIPLO MESSAGES
			hbox = {
				layoutpolicy_horizontal = growing
				layoutpolicy_vertical = expanding
				maximumsize = { -1 113 }
				datamodel = "[TopFrontend.AccessProposals]"
				visible = "[Not(IsDataModelEmpty(TopFrontend.AccessProposals))]"
				
				item = {
