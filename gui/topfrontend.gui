										scale = 1.1
										
										modify_texture = {
											name = mouse_press
											alpha = 0
										}
										modify_texture = {
											name = mouse_enter
											alpha = 0
											rotate_uv = 0
										}
									}
								}

								### ALERT VFX - IDLE
								vfx = {
									blockoverride "size" {
										size = { 400% 400% }
									}
									blockoverride "parent_anchor" {
										parentanchor = hcenter|vcenter
									}
									blockoverride "entity_instance" {
										entity_instance = vfx_entity_ui_alert_above_icon
									}			
								}
							}
						}
					}
